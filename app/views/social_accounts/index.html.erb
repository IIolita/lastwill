<section class="main">

  <p id="notice"><%= notice %></p>

  <h1>Social Accounts</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @social_accounts.each do |social_account| %>
        <tr>
          <td><%= social_account.title %></td>
          <td><%= social_account.body %></td>
          <td><%= link_to 'Show', social_account %></td>
          <td><%= link_to 'Edit', edit_social_account_path(social_account) %></td>
          <td><%= link_to 'Destroy', social_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Social Account', new_social_account_path %>


</section>

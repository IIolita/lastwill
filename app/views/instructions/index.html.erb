          <tbody>
            <% @instructions.each do |instruction| %>


            <div class="card">

                <div class="card_title">
                  <h2><%= instruction.title %></h2>
                </div>

                <div class="action_area">
                  <td><%= link_to 'Открыть', instruction %></td>
